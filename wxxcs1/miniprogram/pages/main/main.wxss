page {
  background-color: #f4f4f4;
  font-size: 32rpx;
}

.avatar {
  width: 100%;
  background-color: #E1E6E6;
  height: 400rpx;
  /* 水平垂直居中 */
  display: flex;
 justify-content: center;
  align-items: center;
}
.avatar > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 10rpx solid rgba(0, 0, 0, 0.1);
}

.menu {
  padding: 50rpx;
  background-color: "#9FBCC2";
  box-sizing: border-box;
}

.menu > view {
  padding: 30rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e6e6e6;
  height: 60rpx;
  font-size: 40rpx;
  color:#90a772 ;
  
}

.menu > view:last-child {
  border: none;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 16rpx;
}

